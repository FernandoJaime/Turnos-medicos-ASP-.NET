@{
    ViewData["Title"] = "Añadir cliente";
}
@using Turnos.Models.ViewModels
@model ClienteViewModel

<h1>Añadiendo nuevo cliente</h1>

<hr />

<div class="row">
    <form asp-action="Index">
        <div class="d-grid d-md-flex justify-content-md-end col-md-6">
            <input type="submit" value="Volver" class="btn btn-outline-dark btn-sm" />
        </div>
    </form>
    <form asp-action="Add">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="CodigoCliente" class="control-label"></label>
                    <input asp-for="CodigoCliente" class="form-control" />
                    <span asp-validation-for="CodigoCliente" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="NombreCliente" class="control-label"></label>
                    <input asp-for="NombreCliente" class="form-control" />
                    <span asp-validation-for="NombreCliente" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="ApellidoCliente" class="control-label"></label>
                    <input asp-for="ApellidoCliente" class="form-control" />
                    <span asp-validation-for="ApellidoCliente" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="EmailCliente" class="control-label"></label>
                    <input asp-for="EmailCliente" class="form-control" />
                    <span asp-validation-for="EmailCliente" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="IdObraSocialCliente" class="control-label"></label>
                    <select asp-for="IdObraSocialCliente" class="form-control" asp-items="ViewBag.ObrasID"></select>
                    <span asp-validation-for="IdObraSocialCliente" class="text-danger"></span>
                </div>
            </div>
        </div>

        <br />

        <div class="form-group">
            <input type="submit" value="Añadir" class="btn btn-success btn-sm" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}