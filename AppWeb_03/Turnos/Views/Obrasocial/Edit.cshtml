@{
    ViewData["Title"] = "Editar obra social";
}
@model Obrasocial

<h1>Editando obra social</h1>

<hr />

<div class="row">
    <form asp-action="Index">
        <div class="d-grid d-md-flex justify-content-md-end col-md-6">
            <input type="submit" value="Volver" class="btn btn-outline-dark btn-sm" />
        </div>
    </form>
    <form asp-action="Edit">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <label>Codigo</label>
                    <input asp-for="CodigoObraSocial" class="form-control" readonly />
                    <span asp-validation-for="CodigoObraSocial" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label>Nombre</label>
                    <input asp-for="NombreObraSocial" class="form-control" />
                    <span asp-validation-for="NombreObraSocial" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label asp-for="PrecioObraSocial" class="control-label">@Html.DisplayNameFor(n => n.PrecioObraSocial)</label>
                    <input asp-for="PrecioObraSocial" class="form-control" />
                    <span asp-validation-for="PrecioObraSocial" class="text-danger"></span>
                </div>
            </div>
        </div>

        <br />

        <div class="form-group">
            <input type="submit" value="Edit" class="btn btn-warning btn-sm" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
