@{
    ViewData["Title"] = "Añadir obra social";
}

@model Obrasocial

<h1>Añadiendo nueva obra social</h1>

<hr />

<div class="row">
    <form asp-action="Index">
        <div class="d-grid d-md-flex justify-content-md-end col-md-6">
            <input type="submit" value="Volver" class="btn btn-outline-dark btn-sm" />
        </div>
    </form>
    <form asp-action="Add">
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <label class="control-label">Codigo</label>
                    <input asp-for="CodigoObraSocial" class="form-control" />
                    <span asp-validation-for="CodigoObraSocial" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label class="control-label">Nombre</label>
                    <input asp-for="NombreObraSocial" class="form-control" />
                    <span asp-validation-for="NombreObraSocial" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <label class="control-label">Precio</label>
                    <input asp-for="PrecioObraSocial" class="form-control" />
                    <span asp-validation-for="PrecioObraSocial" class="text-danger"></span>
                </div>
            </div>
        </div>

        <br />

        <div class="form-group">
            <input type="submit" value="Añadir" class="btn btn-success btn-sm" />
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
